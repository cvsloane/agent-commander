# Database (example)
DATABASE_URL=<postgresql-connection-string>

# Public domain
DOMAIN=agentcommander.example

# Control Plane
JWT_SECRET=your-jwt-secret-at-least-32-characters

# Dashboard Auth
NEXTAUTH_URL=https://agentcommander.example
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-characters
CONTROL_PLANE_JWT_SECRET=same-as-JWT_SECRET

# Simple Auth (recommended for Tailscale-only access)
# Set ACCESS_SECRET to a password you'll use to login
ACCESS_SECRET=your-access-secret-password

# GitHub OAuth (optional - only needed if you want GitHub login)
# Create app at https://github.com/settings/developers
# Homepage URL: https://agentcommander.example
# Callback URL: https://agentcommander.example/api/auth/callback/github
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Optional: override API/WS base if not served on the same domain
# NEXT_PUBLIC_CONTROL_PLANE_URL=https://agentcommander.example
# NEXT_PUBLIC_CONTROL_PLANE_WS_URL=wss://agentcommander.example/v1/ui/stream

# Access control
ADMIN_EMAILS=you@example.com
ALLOWED_EMAILS=you@example.com
